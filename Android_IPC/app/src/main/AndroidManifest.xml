<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.humandroid.android_ipc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MathService"
            android:process=":remote">
            <intent-filter>
                <action android:name="mathservice.humandroid" />
            </intent-filter>
        </service>
        <service
            android:name=".MathMessengerService"
            android:process=":mathproc">
            <intent-filter>
                <action android:name="math.messengerservice.humandroid" />
            </intent-filter>
        </service>

        <activity android:name=".MathOperationsActivity"
            android:label="Android IPC Intent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="math.intent.humandroid"></category>

            </intent-filter>
        </activity>
    </application>

</manifest>
